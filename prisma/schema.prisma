generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  category  String
  date      DateTime
  image     String?
  summary   String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
